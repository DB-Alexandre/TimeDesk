APP_ENV=production
APP_DEBUG=false

# --- Base de données ---
DB_DRIVER=sqlite            # sqlite ou mysql
DB_SQLITE_PATH=data/timesheet.sqlite

DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=timedesk
DB_USERNAME=timedesk
DB_PASSWORD=secret
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# --- Sécurité & sessions ---
SESSION_TIMEOUT=3600        # en secondes
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCK_WINDOW=900       # en secondes
PASSWORD_MIN_LENGTH=10
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_RESET_EXPIRY=3600  # en secondes

# --- Email ---
MAIL_ENABLED=false
MAIL_FROM_ADDRESS=no-reply@timedesk.local
MAIL_FROM_NAME="TimeDesk"

# --- Logs & monitoring ---
LOG_MAX_SIZE_MB=10
LOG_RETENTION_DAYS=7

ALERT_ENABLED=false
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/EXEMPLE
ALERT_WEBHOOK_METHOD=POST
ALERT_EVENTS=login_blocked,db_console_query,user_deleted